<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ActTopfun">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:drawablePadding="20dp"
                    android:text="Recharge "/>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:text="Recharge: "/>

                <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:textColor="@color/recharge_color"
                    android:layout_toRightOf="@+id/tv_title"
                    android:gravity="center"
                android:text="0 "

                    />

                <ImageView
                android:id="@+id/iv_coin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cent"
                android:layout_toRightOf="@+id/tv_amount"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    />
                <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="17dp"
                android:layout_height="20dp"
                android:src="@drawable/rotating_left"
                android:layout_toRightOf="@+id/iv_coin"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/ligh_gray"

                >
                <TextView
                    android:id="@+id/tv_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="Select recharge amount: "/>


                <ImageView
                    android:id="@+id/iv_google_wallet_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="7dp"
                    android:layout_toLeftOf="@+id/tv_google_wallet_txt"
                    android:src="@drawable/google_wallet" />

                <TextView
                    android:id="@+id/tv_google_wallet_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="Google Wallet"
                    android:layout_marginRight="10dp"

                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <ImageView
                    android:id="@+id/iv_coin_icon_amount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/cent" />

                <TextView
                    android:id="@+id/tv_recharge_title_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/recharge_first"
                    android:layout_toRightOf="@+id/iv_coin_icon_amount"
                    />



                <TextView
                    android:id="@+id/tv_amount_txt_amount"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/recharge_amount"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/custom_recharge_amount"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

