          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@drawable/banner1"
              android:layout_marginTop="5dp"
              >


          </LinearLayout>

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        android:visibility="gone"
        <RelativeLayout
            android:id="@+id/rl_bottom_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_bottom"
            android:background="@color/recharge_bottom_color"
            />

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"

            >
            <!-- android:visibility="gone"-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_continue"
                >
                <RelativeLayout
                    android:id="@+id/rl_usr_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_launcher_icon"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/rl_usr_pic"
                    android:layout_toLeftOf="@+id/ly_following"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/tv_coint_count"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="60 Coins"
                        android:gravity="center_vertical"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/recharge_confirm"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/darker_gray"
                        android:paddingLeft="10dp"
                        android:textSize="14dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_following"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/purpule"
                        android:text="@string/rs"/>
                    <TextView
                        android:id="@+id/tv_amount_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="60.00"


                        />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_continue"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/recharge_bottom"
                android:text="Continue"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                >

            </TextView>

        </RelativeLayout>
    </RelativeLayout>

