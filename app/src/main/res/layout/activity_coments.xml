<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comentsrelative_id">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:padding="5dp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="56dp"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Coments"
            android:textColor="#000"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@+id/comentsrelative_id"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgProfileAvatar"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/backimgpro"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giftmessage_id"
            android:text="Aakash coment on sunil's post:Lorem ipsum is a dummy Text "
            android:textColor="#000"
            android:layout_marginTop="10.00dp"
            android:textSize="13dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgProfileAvatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/days_id"
            android:layout_below="@+id/giftmessage_id"
            android:text="4 days to go"
            android:textSize="12dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:id="@+id/mic_id"
            android:src="@drawable/backimgpro"
            android:layout_toRightOf="@+id/imgProfileAvatar"
            android:layout_marginLeft="240dp"

            />

    </RelativeLayout>








</RelativeLayout>