<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendsrelative_id">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:padding="5dp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="56dp"
            android:drawablePadding="20dp"
            android:padding="10dp"
            android:text="Friends"
            android:textColor="#000"
            android:textSize="16sp" />

    </RelativeLayout>
           <android.support.design.widget.TabLayout
            android:id="@+id/friendstabs_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:background="#F2F4F4"
            android:layout_below="@+id/friendsrelative_id"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tabs"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgProfileAvatar"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/backimgpro"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/giftmessage_id"
            android:text="Aakash invite you to join the collab Sagar Kinare Dil Ke Pukare "
            android:textColor="#000"
            android:layout_marginTop="10.00dp"
            android:textSize="13dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgProfileAvatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/days_id"
            android:layout_below="@+id/giftmessage_id"
            android:text="4 days to go"
            android:textSize="12dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/txtSingSong"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Join"
            android:textColor="@color/purpule"
            android:background="@drawable/join_round"
            android:layout_toRightOf="@+id/imgProfileAvatar"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="19dp"
            />
    </RelativeLayout>




</RelativeLayout>
