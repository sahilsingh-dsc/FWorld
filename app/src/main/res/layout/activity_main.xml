<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <SearchView
           android:id="@+id/search"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:queryHint="Search by artist,songs,stagenames"
           android:background="@color/light_gray"
           android:layout_margin="10dp"
           android:iconifiedByDefault="false">

       </SearchView>
       <View
           android:id="@+id/viewName"
           android:layout_width="match_parent"
           android:layout_height="0.8dp"
           android:layout_marginTop="10dp"
           android:background="@color/shadow" />


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="5dp">

        <AdapterViewFlipper
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager"
            android:flipInterval="2000">
        </AdapterViewFlipper>


</android.support.v7.widget.CardView>

       <LinearLayout
           android:layout_width="300dp"
           android:layout_height="60dp"
           android:layout_gravity="center"
           android:weightSum="4">
           <ImageButton
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/gradient"
               android:src="@drawable/ic_guitar"/>


           <ImageButton
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:background="@drawable/gradient"
               android:src="@drawable/ic_karaoke"/>

           <ImageButton
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:background="@drawable/gradient"
               android:src="@drawable/ic_list"/>


           <ImageButton
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:background="@drawable/gradient"
               android:src="@drawable/music"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="5dp"
           android:weightSum="4">
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:textColor="@color/dark_gray"
               android:text="Free style"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:textColor="@color/dark_gray"
               android:gravity="center"
               android:text="Collab"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:layout_marginLeft="15dp"
               android:textColor="@color/dark_gray"
               android:gravity="center"
               android:text="Daily Task"/>
           <TextView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textColor="@color/dark_gray"
               android:layout_marginLeft="15dp"
               android:gravity="center"
               android:text="My Songs"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:weightSum="3">
           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="80dp"
               app:cardCornerRadius="10dp"
               android:layout_margin="10dp"
               android:layout_weight="1">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="#000">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/homepage1"
                       android:alpha="0.4"
                       android:scaleType="centerCrop"/>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true">
                       <ImageView
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:src="@drawable/microphone"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="2dp"
                           android:textColor="#fff"
                           android:text="F-Live"/>
                   </LinearLayout>

               </RelativeLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="80dp"
               app:cardCornerRadius="10dp"
               android:layout_margin="10dp"
               android:layout_weight="1">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#000">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/homepage2"
                   android:alpha="0.4"
                   android:scaleType="centerCrop"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true">
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/mic"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="2dp"
                       android:textColor="#fff"
                       android:text="F-Talents"/>
               </LinearLayout>
           </RelativeLayout>
           </android.support.v7.widget.CardView>

           <android.support.v7.widget.CardView
               android:layout_width="0dp"
               android:layout_height="80dp"
               app:cardCornerRadius="10dp"
               android:layout_margin="10dp"
               android:layout_weight="1">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#000">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/homepage3"
                   android:alpha="0.4"
                   android:scaleType="centerCrop"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true">
                   <ImageView
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:src="@drawable/karaoke"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="2dp"
                       android:textColor="#fff"
                       android:text="F-Club"/>
               </LinearLayout>

           </RelativeLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>
       <android.support.design.widget.TabLayout
           android:id="@+id/tabLayout"
           android:layout_width="match_parent"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           app:tabGravity="fill"
           style="@style/MyTabLayout"
           android:layout_height="25dp"
           app:tabSelectedTextColor="@color/tabselectcolor"
           app:tabIndicatorColor="@color/tabselectcolor"
           app:tabMode="scrollable"/>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.8dp"
           android:background="@color/shadow" />
      `1

   </LinearLayout>

    </ScrollView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:weightSum="5">
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/moment"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="@color/dark_gray"
               android:textSize="12sp"
               android:text="Moments Discover"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/notification"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="@color/dark_gray"
               android:textSize="12sp"
               android:text="Notification"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:background="@drawable/gradient"
               android:src="@drawable/ic_microphone"
               android:scaleType="centerCrop"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/message"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:textSize="12sp"
               android:textColor="@color/dark_gray"
               android:gravity="center"
               android:text="Message"/>

       </LinearLayout>
       <LinearLayout
           android:id="@+id/profile"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:orientation="vertical">
           <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/user"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textSize="12sp"
               android:textColor="@color/dark_gray"
               android:text="Profile"/>

       </LinearLayout>
   </LinearLayout>
</RelativeLayout>