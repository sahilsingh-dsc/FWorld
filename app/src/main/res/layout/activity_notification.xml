<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notirelative_id">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="6sp"
            android:padding="5dp"
            android:textColor="#000"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="#000"
            android:drawablePadding="20dp"
            android:text="Notification"
            android:layout_marginLeft="100dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frndrelative_id"
        android:layout_below="@+id/notirelative_id"
        android:paddingTop="30dp">

        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/firstcard_id"
            app:cardBackgroundColor="#F77063"
            >




       </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/secondcard_id"
            android:layout_toRightOf="@+id/firstcard_id"
            app:cardBackgroundColor="#69C8A4"
            >


        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chatrelative_id"
        android:layout_below="@+id/frndrelative_id">

        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/thirdcard_id"
            app:cardBackgroundColor="#3CA1CF"
            >


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/forthcard_id"
            android:layout_toRightOf="@+id/thirdcard_id"
            app:cardBackgroundColor="#FFC300"
            >

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>