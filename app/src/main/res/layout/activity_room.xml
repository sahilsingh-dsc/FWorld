<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leaverelative_id">

            <TextView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:drawableTop="@drawable/ic_close_purple_24dp"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/leavegroup_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"
            android:textColor="#000"
            android:text="Are you sure you want to leave the group?"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/mic_id"
            android:src="@drawable/backimgpro"
            android:layout_below="@+id/leavegroup_id"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/roomname_id"
                android:layout_toRightOf="@+id/mic_id"
                android:text="ROOM NAME"
                android:textColor="#000"
                android:layout_below="@+id/leavegroup_id"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/room_id"
                android:text="Room Id:125665"
                android:layout_below="@+id/roomname_id"
                android:layout_toRightOf="@+id/mic_id"
                android:textSize="10dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/join_id"
                android:text="JOIN"
                android:layout_below="@+id/room_id"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="70dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leave_id"
                android:text="LEAVE"
                android:layout_toRightOf="@+id/join_id"
                android:layout_below="@+id/room_id"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="50dp"
                android:textColor="@color/purpule"




                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>


