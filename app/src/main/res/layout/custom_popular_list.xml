<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_margin="5dp"
        android:elevation="15dp"

        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="170dp">
            <ImageView
                android:id="@+id/imgProfileAvatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
               android:adjustViewBounds="true"
                android:src="@drawable/pop_img1"/>
            <RelativeLayout
                android:id="@+id/rl_video"
                android:layout_width="40dp"
                android:layout_height="40dp">
            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/video_camera"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_cross"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/iv_cross"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/remove_icon"/>
            </RelativeLayout>

        </RelativeLayout>
            <TextView
                android:id="@+id/groupename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly"
               android:layout_gravity="center_vertical"
                android:text="Groupe Name"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:textSize="14dp"/>
            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="2dp"

                >
            <RelativeLayout
                android:id="@+id/rl_user_pic"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_pic"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/dumm_pop_img"
                    android:layout_marginLeft="3dp"
                    android:layout_centerInParent="true"
                   />
            </RelativeLayout>
                <TextView
                    android:id="@+id/tv_usr_sub_nm"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/rl_user_pic"
                    android:layout_toLeftOf="@+id/rl_like_icon"
                    android:layout_gravity="center_vertical"
                    android:text="Ravi"
                  android:gravity="center_vertical"
                    android:textColor="#000"
                    android:paddingLeft="5dp"
                    android:textSize="12dp"/>
                <RelativeLayout
                    android:id="@+id/rl_like_icon"
                    android:layout_width="35dp"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/tv_like"

                    >
                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"

                        android:src="@drawable/heart"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="25dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical|left"
                    android:text="25"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>