<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/backimgpro"
                android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/textViewUserName"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="Username" />

        </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:background="@drawable/roundpurple"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/purpule"
                        android:text="Follow"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_close_black_24dp"
                        android:padding="5dp"
                       />
                </LinearLayout>

            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/roundwhole"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/imgThumb"
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="false">
                <ImageView
                    android:id="@+id/imgThumb1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/backimgpro"
                    android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgThumb"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewSongName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_music"
                    android:drawablePadding="10dp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Song Name"/>
                <TextView
                    android:id="@+id/textViewPlayTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:text="01.20 4k plays"/>

            </LinearLayout>


            <TextView
                android:id="@+id/btncreate"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/imgThumb"
                android:layout_marginLeft="10dp"
                android:textSize="10sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/purpule"
                android:background="@drawable/roundpurple"
                android:gravity="center"
                android:text="Create"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:textColor="@color/purpule"
                android:background="@drawable/roundpurple"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Join"/>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">
                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:padding="5dp"
                     android:drawableLeft="@drawable/ic_like"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_share"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_comment"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_gift"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:drawableLeft="@drawable/ic_download"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>